<table class="table mt-2">
	<thead>
		<tr>
			<th>Title</th>
			<th>Free</th>
			<th>Director</th>
			<th>Genre</th>
			<th>Description</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Title</td>
				<td>@(item.Free ? "Free" : "")</td>
				<td>@item.Director</td>
				<td>@item.FilmGenres</td>
				<td>@item.Description.Truncate(50)</td>
				<td>
					<div class="d-flex me-1 justify-content-end">
						<button class="btn btn-outline-primary rounded-0 me-1" @onclick="@(() => OnClick.InvokeAsync(new ClickModel(PageType.Edit, item.Id)))"></button>
						<button class="btn btn-outline danger rounded-0" @onclick="@(() => OnClick.InvokeAsync(new ClickModel(PageType.Create, item.Id)))"></button>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>


@code {
	[Parameter] public List<FilmDTO> Model { get; set; } = new();
	[Parameter] public EventCallback<ClickModel> OnClick { get; set; }
}
